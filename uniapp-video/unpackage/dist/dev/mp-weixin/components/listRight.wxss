
.content{
		text-align: center;
}
.icon{
		font-size: 25px;
		margin: 25px auto;
		width: 25px;
		height: 25px;
		text-align: center;
}
.iconStyle{
	font-size: 30px;
	-webkit-animation: rotate 1.5s linear 0.2s infinite;
	        animation: rotate 1.5s linear 0.2s infinite;
	width: 30px;
	height: 30px;
	margin: 0 auto;
}
.userPic {
	width: 35px;
	height: 35px;
	border: 2px solid #fff;
	border-radius: 50%;
	position: relative;
}
.iconJia{
	position: absolute;
	background-color: red;
	border-radius: 50%;
	left: 9px;
	bottom: -9px;
}
.userPic image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
@-webkit-keyframes rotate {
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
@keyframes rotate {
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
.isRed{
	color: red;
}
.isWhite{
	color: white;
}

